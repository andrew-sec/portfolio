                          .skill__name Gulp
                      li.skills-section__item
                        .skill
                          svg.skill__circle(viewbox='0 0 110 110')
                            circle.skill__circle_first(r='45', cx='50%', cy='50%', fill='none')
                            circle.skill__circle_second.circle-85(r='45', cx='50%', cy='50%', transform='rotate(-90 55 55)')
                          .skill__name Bower
    
    section.section.section__full-screen.section__map(style='background-image:url(assets/img/map.jpg)')
      .map.map__contacts.contacts.login-box
        .title.about__title.subtitle 
          .h3 Контакты
        ul.contacts__list
          li.contacts__item
            +svg('contacts__icon','skype_n')
            .contacts__text skype_kdn
          li.contacts__item
            +svg('contacts__icon','envelope')
            .contacts__text astahov@gmail.com
          li.contacts__item
            +svg('contacts__icon','phone')
            .contacts__text +7 931 200 93 24
          li.contacts__item
            +svg('contacts__icon','map_marker')
            .contacts__text г.Новосибирск, ул. Инская, д. 5
        
      footer.footer.footer_position_absolute
        .footer_row_top
          nav.navigation.navigation_location_footer
            ul.navigation_location_footer__list
              each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
                li.navigation_location_footer__item
                  a(href='#' class='navigation_location_footer__link')= item
          
          .footer__socials.socials
            ul.socials__list.socials__list_footer
              li.socials__item.socials__item_footer
                a(href='#' class=`socials__link socials__link_footer socials__link_vk`)
                  +svg('socials__icon socials__icon_footer','vk_round')
              li.socials__item.socials__item_footer
                a(href='#' class=`socials__link socials__link_footer socials__link_git`)
